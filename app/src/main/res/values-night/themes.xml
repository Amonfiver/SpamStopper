<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Tema Dark Mode de SpamStopper 2.0 -->
    <style name="Theme.SpamStopper" parent="Theme.Material3.DayNight.NoActionBar">

        <!-- Colores primarios -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryContainer">@color/primary_variant</item>
        <item name="colorOnPrimaryContainer">@color/white</item>

        <!-- Colores secundarios -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSecondaryContainer">@color/secondary_variant</item>
        <item name="colorOnSecondaryContainer">@color/white</item>

        <!-- Colores de superficie (Dark) -->
        <item name="colorSurface">@color/background_dark</item>
        <item name="colorOnSurface">@color/on_surface_dark</item>
        <item name="colorSurfaceVariant">@color/surface_variant_dark</item>
        <item name="colorOnSurfaceVariant">@color/on_surface_variant_dark</item>

        <!-- Background (Dark) -->
        <item name="android:colorBackground">@color/background_dark</item>
        <item name="colorOnBackground">@color/on_surface_dark</item>

        <!-- Error -->
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/white</item>

        <!-- Status bar (Dark) -->
        <item name="android:statusBarColor">@color/background_dark</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Navigation bar (Dark) -->
        <item name="android:navigationBarColor">@color/surface_dark</item>

    </style>

</resources>